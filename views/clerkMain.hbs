<div class="container mt-5 mb-5">
    <div class="row">
		<div class="col-md-5 mx-auto">
			  <div id="second">
			      <div class="myform form ">
                        <div class="logo mb-3">
                           <div class="col-md-12 text-center">
                              <h1 >Add new meal</h1>
                           </div>
                        </div>
                        <form action="/add-meals" method="POST" name="addingMeals" enctype="multipart/form-data">
                           <div class="form-group">
                              <label for="title">Title</label>
                              <input type="text"  name="title" class="form-control" id="title" aria-describedby="title"
                              placeholder="Enter the title" value="{{data.formData.title}}">
                              {{#if data.errors.title}}
                                 <div class="my-feedback" style="color:red;margin-top:5px" > 
                                    <strong>Warning:</strong> {{data.errors.title}}
                                 </div>
                              {{/if}}
                           </div>
                           <div class="input-group">
                              <div class="input-group-prepend">
                                 <span class="input-group-text" name="description">Description</span>
                              </div>
                              <textarea class="form-control" aria-label="description" name="description"></textarea>
                           </div>
                           <div class="form-group">
                              <label for="price">Price</label>
                              <input type="text" name="price"  class="form-control" id="price" aria-describedby="price" 
                              placeholder="Enter the price" value="{{data.formData.price}}">
                              {{#if data.errors.price}}
                                 <div class="my-feedback" style="color:red;margin-top:5px" > 
                                    <strong>Warning:</strong> {{data.errors.price}}
                                 </div>
                              {{/if}}
                           </div>
                           <div class="form-group">
                              <label for="amount">Amount</label>
                              <input type="text" name="amount" id="amount"  class="form-control" aria-describedby="amount" 
                              placeholder="Enter the amount" >
                               {{#if data.errors.amount}}
                                 <div class="my-feedback" style="color:red;margin-top:5px" > 
                                    <strong>Warning:</strong> {{data.errors.amount}}
                                 </div>
                              {{/if}}
                           </div>
                           <fieldset class="form-group">
                            <div class="row">
                            <legend class="col-form-label col-sm-2 pt-0">Rated meal?</legend>
                            <div class="col-sm-10">
                                <div class="form-check">
                                <input class="form-check-input" type="radio" name="rated" id="gridRadios1" value="true">
                                <label class="form-check-label" for="gridRadios1">
                                    YES
                                </label>
                                </div>
                                <div class="form-check">
                                <input class="form-check-input" type="radio" name="rated" id="gridRadios2" value="false" checked>
                                <label class="form-check-label" for="gridRadios2">
                                    NO
                                </label>
                                </div>
                            </div>
                            </div>
                        </fieldset>
                           <div class="form-group">
                              <label for="image">Image</label>
                              <input type="file" name="image" class="form-control-file" id="image" aria-describedby="image" 
                              placeholder="Upload image">
                              {{#if data.errors.image}}
                                 <div class="my-feedback" style="color:red;margin-top:5px" > 
                                    <strong>Warning:</strong> {{data.errors.image}}
                                 </div>
                              {{/if}}
                           </div>
                           <div class="col-md-12 text-center mb-3">
                              <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Add New Package</button>
                           </div>
                            </div>
                        </form>
                     </div>
                    </div> 
			    </div>
		    </div>
        </div>   
    </div> 