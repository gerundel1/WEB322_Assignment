   <div class="container mt-5 mb-5">
        <div class="row">
			<div class="col-md-5 mx-auto">
			<div id="first">
				<div class="myform form ">
					 <div class="logo mb-3">
						 <div class="col-md-12 text-center">
							<h1>Login</h1>
						 </div>
					</div>
                   <form action="/login" method="post" name="login">
                           <div class="form-group">
                              <label for="email">Email:</label>
                              <input type="text" name="email"  class="form-control" id="email" aria-describedby="emailHelp" 
                              placeholder="Enter email" value="{{data.formData.email}}">
                              {{#if data.errors.email}}
                                 <div class="my-feedback" style="color:red;margin-top:5px" > 
                                    <strong>Warning:</strong> {{data.errors.email}}
                                 </div>
                              {{/if}}
                           </div>
                           <div class="form-group">
                              <label for="exampleInputEmail1">Password:</label>
                              <input type="text" name="password" id="password"  class="form-control" aria-describedby="passwordHelp" 
                              placeholder="Enter Password" value="{{data.formData.password}}">
                              {{#if data.errors.password}}
                                 <div class="my-feedback" style="color:red;margin-top:5px" > 
                                    <strong>Warning:</strong> {{data.errors.password}}
                                 </div>
                              {{/if}}
                           </div>
                           <div class="col-md-12 text-center ">
                              <button type="submit" class=" btn btn-block mybtn btn-success tx-tfm">Login</button>
                           </div>
                           <div class="col-md-12 ">
                              <div class="login-or">
                                 <hr class="hr-or">
                              </div>
                           </div>
                           <div class="form-group">
                              <p class="text-center">Don't have account? <a href="/register" id="signup">Sign up here</a></p>
                           </div>
                        </form>
				</div>
			</div>
		</div>
    </div>
</div>        